<Window x:Class="Monopoly.CommunityChestCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="CommunityChestCard" Height="300" Width="400" ResizeMode="NoResize" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="Images/CommunityChestBackground.png"/>
    </Window.Background>
    <Grid Margin="4,0,-4.4,0.4">
        <TextBlock x:Name="tbCommunityChestDisplay" HorizontalAlignment="Left" Margin="45,25,0,0" TextWrapping="Wrap" Text="Community Chest" VerticalAlignment="Top" Height="94" Width="339" FontSize="38"/>
        <TextBlock x:Name="tbChestInfo" HorizontalAlignment="Left" Margin="45,105,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="65" Width="300"/>
        <Button x:Name="btnCardAction" Content="Ok" HorizontalAlignment="Left" Margin="113,175,0,0" VerticalAlignment="Top" Width="155" Height="74" Click="Button_Click"/>

    </Grid>
</Window>
