<Window x:Class="Monopoly.Jail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="Jail" Height="305" Width="315">
    <Grid>
        <Button x:Name="btnJailPay" Content="Pay $50" HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top" Width="75" Height="45" Click="BtnJailPay_Click"/>
        <Button x:Name="btnDone" Content="Done" HorizontalAlignment="Left" Margin="225,221,0,0" VerticalAlignment="Top" Width="75" Height="45" Click="BtnDone_Click"/>
        <Button x:Name="btnUseJailCard" Content="Use GOJF Card" HorizontalAlignment="Left" Margin="111,221,0,0" VerticalAlignment="Top" Width="93" Height="45" Click="BtnUseJailCard_Click"/>
        <Rectangle HorizontalAlignment="Left" Height="206" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="289">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/JailBackground.png"/>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
